# FastAPI 설정
APP_NAME="Stock Trading API"
APP_VERSION="1.0.0"
DEBUG=false

# CORS 설정
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# 한국투자증권 API 설정
KI_API_KEY=your_api_key_here
KI_SECRET_KEY=your_secret_key_here
KI_ACCOUNT_NUMBER=your_account_number_here
KI_HTSID=wdlight
KI_CUSTTYPE=P
KI_IS_PAPER_TRADING=false
KI_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# 한국투자증권 URL 설정
KI_API_URL=https://openapi.koreainvestment.com:9443
KI_WEBSOCKET_URL=ws://ops.koreainvestment.com:21000
KI_PAPER_URL=https://openapivts.koreainventment.com:29443
KI_PAPER_WEBSOCKET_URL=ws://ops.koreainvestment.com:31000

# 한국투자증권 토큰 설정 (API에서 받아온 값들)
KI_API_APPROVAL_KEY=your_approval_key_here
KI_ACCESS_TOKEN=your_access_token_here
KI_WEBSOCKET_APPROVAL_KEY=your_websocket_approval_key_here
KI_USING_URL=your_using_url_here
KI_ACCOUNT_ACCESS_TOKEN=your_account_access_token_here

# 데이터베이스 설정 (향후 확장용)
DATABASE_URL=sqlite:///./trading.db

# Redis 설정 (캐싱용)
REDIS_URL=redis://localhost:6379

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=trading_api.log

# WebSocket 설정
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# 매매 설정
DEFAULT_ORDER_AMOUNT=100000
MAX_WATCHLIST_SIZE=50